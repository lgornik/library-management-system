# ===========================================
# Library Management System - Environment Variables
# ===========================================

# Node
NODE_ENV=development

# PostgreSQL (Write Database)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=library

# MongoDB (Read Database)
MONGODB_URL=mongodb://localhost:27017/library_read

# Redis (Cache)
REDIS_URL=redis://localhost:6379

# RabbitMQ (Event Bus)
RABBITMQ_URL=amqp://guest:guest@localhost:5672

# API Gateway
API_GATEWAY_PORT=4000

# Services (gRPC ports)
BOOK_SERVICE_GRPC_PORT=50051
AUTHOR_SERVICE_GRPC_PORT=50052
STATS_SERVICE_GRPC_PORT=50053

# JWT (for future auth)
JWT_SECRET=your-super-secret-key-change-in-production
JWT_EXPIRES_IN=7d
