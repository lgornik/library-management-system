{
  "name": "@library/book-service",
  "version": "1.0.0",
  "description": "Book microservice - manages books, quotes, and notes",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:unit": "vitest run --dir tests/unit",
    "test:integration": "vitest run --dir tests/integration",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist coverage",
    "db:migrate": "tsx src/infrastructure/persistence/migrations/run.ts",
    "proto:generate": "grpc_tools_node_protoc --proto_path=proto --ts_out=src/infrastructure/grpc/generated --grpc_out=src/infrastructure/grpc/generated proto/*.proto"
  },
  "dependencies": {
    "@library/shared-kernel": "workspace:*",
    "@grpc/grpc-js": "^1.9.0",
    "@grpc/proto-loader": "^0.7.0",
    "amqplib": "^0.10.0",
    "dotenv": "^16.4.0",
    "express": "^4.18.0",
    "ioredis": "^5.3.0",
    "mongodb": "^6.3.0",
    "pg": "^8.11.0",
    "uuid": "^9.0.0",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@types/amqplib": "^0.10.0",
    "@types/express": "^4.17.0",
    "@types/node": "^20.11.0",
    "@types/pg": "^8.11.0",
    "@types/uuid": "^9.0.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.0",
    "vitest": "^1.2.0"
  }
}
